  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border-top: 1px solid #5e017a;
  -webkit-justify-content: space-around;
          justify-content: space-around;
}
.modal-footer .btn_cancel {
  margin: 20rpx 0;
}
.modal-footer .btn {
  margin-top: 20rpx;
  font-size: 13px;
  background: #5e017a;
  padding: 8px 50rpx;
  border-radius: 20px;
  color: #fff;
}
.modal-main {
  height: 120rpx;
  padding: 15px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
